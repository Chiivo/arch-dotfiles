#!/usr/bin/env sh

help() {
	echo '	-p,			install paru'
	echo '	-i,			install packages from main repos'
	echo '	-a,			install packages from aur'
	echo '	-c,			copy files to proper places'
	echo '	-b,			install bling'
}

paruinstall() {
	sudo pacman -S --needed base-devel
	git clone https://aur.archlinux.org/paru.git
	cd paru
	makepkg -si
}

pkgsinstall() {
	sudo pacman -S \
		sddm \ # Display Manager
		awesome \ # Window Manager
		xorg-xrdb \ # Terminal Stuff
		wget \
		neovim \
		nsxiv \
		zathura \
		rofi \
		numlockx \
		bottom \
		maim \
		xclip \
		mpv \
		wine-staging \
		fontconfig \
		man-db \
		alacritty \ # General
		emacs \
		firefox \
		thunar \
		thunar-archive-plugin \
		thunar-volman \
		tumbler \
		gvfs \
		discord \
		pavucontrol \
		blueman \
		lxappearance \
		solaar \
		papirus-icon-theme \
		krita \ # Art Stuff
		blender \
		alsa-utils \ # Audio Stuff
		sound-theme-freedesktop \
		musescore \
		yabridge \
		yabridgectl \
		carla \
		calf \
		easyeffects \
		steam \ # Game Stuff
		retroarch \
		godot \
		noto-fonts \ # Fonts
		noto-fonts-cjk \
		noto-fonts-emoji
}

aurinstall() {
	paru -S --skipreview \
		sddm-sugar-candy-git \ # Display Greeter
		nitch \ # Terminal Stuff
		picom-allusive \
		joshuto-bin \
		shell-color-scripts \
		cbonsai \
		discocss-git \ # General
		nvim-packer-git \
		spotify \
		orchis-theme \
		phinger-cursors \
		vial-appimage \
		bitwig-studio \ # Music Stuff
		prismlauncher \ # Game Stuff
		heroic-games-launcher-bin \
		# rpcs3-git \
		soundux \
		ttf-comfortaa \ # Fonts
		otf-symbola \
		ttf-victor-mono
}

copyfiles() {
	cp -r ./arch-dotfiles/.config/ ./
	cp -r ./arch-dotfiles/scripts/ ./
	cp -r ./arch-dotfiles/fonts/ ./.local/share/
	cp -r ./arch-dotfiles/.bashrc ./
	cp -r ./arch-dotfiles/.Xresources ./
}

bling() {
	git clone https://github.com/BlingCorp/bling.git
	cp bling .config/awesome/
}

case "$1" in
	-i) pkgsinstall;;
	-p) paruinstall;;
	-a) aurinstall;;
	-c) copyfiles;;
	-b) bling;;
	*) help;;
esac
