#!/usr/bin/env sh

help() {
	echo '	-p,			install paru'
	echo '	-i,			install packages from main repos'
	echo '	-a,			install packages from aur'
	echo '	-c,			copy files to proper places'
}

paruinstall() {
	sudo pacman -S --needed base-devel
	git clone https://aur.archlinux.org/paru.git
	cd paru
	makepkg -si
}

pkgsinstall() {
	sudo pacman -S \
		`# Display Manager` \
		sddm \
		\
		`# Window Manager` \
		awesome \
		\
		`# Drivers` \
		nvidia \
		nvidia-settings \
		\
		`# Terminal Stuff` \
		xorg-xrdb \
		wget \
		neovim \
		nsxiv \
		zathura \
		rofi \
		bottom \
		maim \
		xclip \
		mpv \
		wine-staging \
		fontconfig \
		man-db \
		\
		`# General` \
		alacritty \
		thunar \
		thunar-archive-plugin \
		file-roller\
		thunar-volman \
		tumbler \
		gvfs \
		gvfs-mtp \
		network-manager-applet \
		pavucontrol \
		blueman \
		bluez-utils \
		lxappearance \
		solaar \
		papirus-icon-theme \
		virtualbox \
		obs-studio \
		\
		`# Art Stuff` \
		krita \
		blender \
		\
		`# Audio Stuff` \
		pipewire-pulse \
		pipewire-alsa \
		pipewire-jack \
		alsa-utils \
		sound-theme-freedesktop \
		musescore \
		yabridge \
		yabridgectl \
		carla \
		calf \
		easyeffects \
		\
		`# Game Stuff` \
		steam \
		retroarch \
		godot \
		dualsensectl-git \
		\
		`# Fonts` \
		noto-fonts \
		noto-fonts-cjk \
		noto-fonts-emoji
}

aurinstall() {
	paru -S --skipreview \
		`# Display Greeter` \
		sddm-sugar-candy-git \
		\
		`# Display Manager Stuff` \
		awesome-bling-git \
		\
		`# Terminal Stuff` \
		nitch \
		picom-git \
		joshuto-bin \
		shell-color-scripts \
		cbonsai \
		vesktop-bin \
		\
		`# General` \
		librewolf-bin \
		nvim-packer-git \
		logseq-desktop-bin \
		spotify \
		orchis-theme \
		phinger-cursors \
		vial-appimage \
		\
		`# Art` \
		opentabletdriver \
		`# Music Stuff` \
		bitwig-studio \
		\
		`# Game Stuff` \
		r2modman-appimage \
		prismlauncher \
		heroic-games-launcher-bin \
		\
		`# rpcs3-git` \
		soundux \
		`# Fonts` \
		ttf-comfortaa \
		ttf-mac-fonts \
		otf-symbola
}

copyfiles() {
	cp -r ./arch-dotfiles/.config/ ./
	cp -r ./arch-dotfiles/scripts/ ./
	cp -r ./arch-dotfiles/fonts/ ./.local/share/
	cp -r ./arch-dotfiles/.bashrc ./
	cp -r ./arch-dotfiles/.Xresources ./
	sudo cp ./archdotfiles/sddm/sddm.conf /etc/sddm.conf
	sudo cp ./archdotfiles/sddm/theme.conf /usr/share/sddm/themes/sugar-candy/theme.conf
}

case "$1" in
	-i) pkgsinstall;;
	-p) paruinstall;;
	-a) aurinstall;;
	-c) copyfiles;;
	*) help;;
esac
