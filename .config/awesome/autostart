#!/usr/bin/env sh

run() {
	if ! pgrep -f "$1"; then
		"$@"&
	fi
}

### Screen ###
run ~/scripts/display-setup

### Wifi ###
run nm-applet

### Mouse ###
run solaar --window=hide
run ~/scripts/mousesettings

### Tablet ###
systemctl --user enable opentabletdriver --now

### Wallpaper ###
# run ~/scripts/wallpapersetter

### Compositor ###
run picom

### Bluetooth ###
run blueman-applet

### Discord ###
if pgrep -f vesktop; then
	exit &
else
	# discocss &
	vesktop &
fi

### Emacs ###
if pgrep -f emacs; then
	exit &
else
	emacs --daemon &
fi

### Steam ###
if pgrep -f steam; then
	exit &
else
	steam -silent &
fi
